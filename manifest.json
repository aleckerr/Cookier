
{
	"manifest_version": 2,

	"name": "Cookier",
  	"version": "1.0",

  	"description": "A simple cookie management chrome extension",
  	"browser_action": {
    	"default_icon": "images/cookier.png",
    	"default_popup": "html/cookier.html"
  	},
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/js/scripts.js"]
      }
    ],
  	"permissions": [
      "tabs",
  		"cookies",
      "http://*/*",
      "https://*/*",
      "*://*.example.com/*"
  	]
}